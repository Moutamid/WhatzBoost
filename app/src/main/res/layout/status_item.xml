<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12sp"
    app:cardElevation="0dp"
    android:layout_margin="5sp"
    app:cardBackgroundColor="@color/card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                app:cardElevation="0dp"
                app:cardCornerRadius="12sp">

                <ImageView
                    android:id="@+id/itemImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/video_layout"
                android:layout_width="match_parent"
                android:layout_height="150sp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/greyTran" />

                <ImageView
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/round_play_circle_24"
                    app:tint="@color/icon" />


            </RelativeLayout>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/buttnsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/search"
            android:layout_marginTop="12sp"
            app:cardCornerRadius="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/downloadedBtn"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6sp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:backgroundTint="@color/dark_grey"
                    android:drawableTint="@color/text_color"
                    android:enabled="false"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/montserrat_alternates"
                    android:drawableLeft="@drawable/round_check_24"
                    android:text="Saved" />

                <Button
                    android:id="@+id/saveBtn"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6sp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:drawableTint="@color/text_color"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/montserrat_alternates"
                    android:drawableLeft="@drawable/round_download_24"
                    android:text="Save" />

                <Button
                    android:id="@+id/shareBtn"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6sp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:drawableTint="@color/text_color"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/montserrat_alternates"
                    android:drawableLeft="@drawable/round_share_24"
                    android:text="Share" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>