<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".fragments.FakeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12sp"
            android:text="WhatzBoost"
            android:textSize="28sp"
            android:gravity="end"
            android:layout_marginTop="15sp"
            android:textColor="@color/off_white"
            android:fontFamily="@font/poller_one" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12sp"
            android:layout_marginStart="12sp"
            android:gravity="end"
            android:textSize="18sp"
            android:textColor="@color/off_white"
            android:fontFamily="@font/montserrat_alternates"
            android:text="Create A Fake profile or Status 🐱‍👤" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profile"
                    app:cardBackgroundColor="@color/card"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="12sp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="14sp">

                        <ImageView
                            app:tint="@color/icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/user" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13sp"
                    android:fontFamily="@font/poppins"
                    android:text="Make Profile"
                    android:textColor="@color/off_white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/story"
                    app:cardBackgroundColor="@color/card"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="12sp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="14sp">

                        <ImageView
                            app:tint="@color/icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/stories" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13sp"
                    android:fontFamily="@font/poppins"
                    android:text="Make Stories"
                    android:textColor="@color/off_white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>