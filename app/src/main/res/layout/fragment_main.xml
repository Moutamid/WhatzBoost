<?xml version="1.0" encoding="utf-8"?>
<com.ldt.springback.view.SpringBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:fillViewport="true"
    app:scrollOrientation="vertical"
    tools:context=".fragments.MainFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:text="WhatzBoost"
                android:textSize="28sp"
                android:gravity="end"
                android:layout_marginTop="15sp"
                android:textColor="@color/off_white"
                android:fontFamily="@font/poller_one" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12sp"
                android:layout_marginStart="12sp"
                android:gravity="end"
                android:textSize="18sp"
                android:textColor="@color/off_white"
                android:fontFamily="@font/montserrat_alternates"
                android:text="Your most loved tools ðŸ’•" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/delete_message"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="12sp"
                        android:layout_margin="12sp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/bin"
                                app:tint="@color/icon" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:textSize="16sp"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins"
                        android:text="Deleted Messages" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/video_splitter"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="12sp"
                        android:layout_margin="12sp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/split"
                                app:tint="@color/icon" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:textSize="16sp"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins"
                        android:text="Video Splitter" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/whats_web"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="12sp"
                        android:layout_margin="12sp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/whatsweb"
                                app:tint="@color/icon" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:textSize="16sp"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins"
                        android:text="Whatsapp Web" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/direct_chat"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="12sp"
                        android:layout_margin="12sp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/whatsapp"
                                app:tint="@color/icon" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins"
                        android:text="Open WA Profile" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/status_saver"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="12sp"
                        android:layout_margin="12sp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/download"
                                app:tint="@color/icon" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:textSize="16sp"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins"
                        android:text="Status Saver" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/repeater"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardCornerRadius="12sp"
                        android:layout_margin="12sp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/card"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="14sp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/repeat"
                                app:tint="@color/icon" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13sp"
                        android:textSize="16sp"
                        android:textColor="@color/off_white"
                        android:fontFamily="@font/poppins"
                        android:text="Text Repeater" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</com.ldt.springback.view.SpringBackLayout>