<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.SplitVideoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            app:cardCornerRadius="50dp"
            app:cardElevation="6dp"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/card"
            android:outlineAmbientShadowColor="@color/card"
            android:outlineSpotShadowColor="@color/card">

            <ImageView
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_margin="8sp"
                android:src="@drawable/round_arrow_back_24"
                app:tint="@color/icon" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Split Your Video"
            android:layout_alignParentRight="true"
            android:textSize="28sp"
            android:padding="12sp"
            android:layout_gravity="end"
            android:drawableTint="@color/icon"
            android:fontFamily="@font/montserrat_alternates"
            android:textColor="@color/white"
            android:layout_marginEnd="12sp"
            android:drawablePadding="12sp"
            android:gravity="center"
            app:drawableLeftCompat="@drawable/baseline_splitscreen_24" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deleted Messages For This Person"
        android:textColor="@color/text_color"
        android:layout_gravity="end"
        android:gravity="end"
        android:visibility="invisible"
        android:layout_marginEnd="12sp"
        android:layout_marginStart="12sp"
        android:textSize="18sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Filename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15sp"
                android:padding="12sp"
                android:layout_marginStart="15sp"
                android:background="@drawable/bg_yellow"
                android:backgroundTint="@color/card"
                android:gravity="center"
                android:text="Hello World"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_margin="15sp"
                app:cardCornerRadius="8sp"
                app:cardBackgroundColor="@color/card"
                app:cardElevation="0dp">

                <VideoView
                    android:id="@+id/addcutsvideoview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/card"
                    android:keepScreenOn="true" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/bg_yellow"
                android:backgroundTint="@color/icon"
                android:orientation="horizontal"
                android:weightSum="2">


                <ImageView
                    android:id="@+id/videoplaybtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    app:tint="@color/greyWhats"
                    android:src="@drawable/ic_baseline_play_arrow_24" />

                <RelativeLayout
                    android:id="@+id/seekLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="16dp"
                    android:background="@android:color/transparent"
                    android:minHeight="28dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/TimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/QualityLayout"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/left_pointer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="00:00"
                    android:textAppearance="?android:attr/textAppearance"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/mid_pointer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="00:00"
                    android:textAppearance="?android:attr/textAppearance"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/right_pointer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:text="00:00"
                    android:textAppearance="?android:attr/textAppearance"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/text_color"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/QualityLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/CompressLayout"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/bg_yellow"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/sp_convert"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:background="@android:color/transparent"
                                android:gravity="center"
                                android:spinnerMode="dropdown"
                                android:theme="@style/spinnerTheme" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/baseline_arrow_drop_down_24" />
                        </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/split"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:layout_margin="12sp"
                android:text="Split Video"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/CompressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="invisible">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/textsizeValue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed">

                    <TextView
                        android:id="@+id/textcompressSize"
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="4dp"
                        android:background="@drawable/bg_yellow"
                        android:backgroundTint="#4C56E5"
                        android:gravity="center"
                        android:text="0 MB"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/textCompressPercentage"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textCompressPercentage"
                        android:layout_width="75dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/bg_yellow"
                        android:backgroundTint="#4C56E5"
                        android:gravity="center"
                        android:text="-0%"
                        android:textColor="#ffffff"
                        android:textSize="12dp"
                        app:layout_constraintEnd_toStartOf="@+id/textcompressSize"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/textsizeValue"
                    android:layout_width="158dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_yellow"
                    android:backgroundTint="#4C56E5"
                    android:gravity="center"
                    android:text="0 MB"
                    android:textColor="#ffffff"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.496"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>